class VendingMachine:
    def __init__(self):
        self.__drinks = {
            "å¯ä¹": 3,
            "é›ªç¢§": 4,
            "æœæ±": 5,
        }
        self.__stock = {
            "å¯ä¹": 5,
            "é›ªç¢§": 7,
            "æœæ±": 6,
        }
        self.__balance = 0

    def show_drinks(self):
        print("å‰©ä½™å¯é€‰é¥®æ–™ï¼š")
        for name in self.__drinks:
            price = self.__drinks[name]
            stock = self.__stock.get(name, 0)
            print(f"{name}-{price}å…ƒï¼ˆå‰©ä½™{stock}ç“¶ï¼‰")

    def recharge(self, amount):
        if amount > 0:
            self.__balance += amount
            print(f"å……å€¼æˆåŠŸï¼Œå½“å‰ä½™é¢ä¸º{self.__balance}å…ƒ")
        else:
            print("å……å€¼é‡‘é¢å¿…é¡»å¤§äº0")

    def buy(self, name):
        if name not in self.__drinks:
            print("æ²¡æœ‰è¿™ç§é¥®æ–™")
        elif self.__stock.get(name, 0) <= 0:
            print("è¯¥é¥®æ–™å·²å”®å®Œ")
        elif self.__balance < self.__drinks[name]:
            print(f"ä½™é¢ä¸è¶³çš„ï¼Œå½“å‰å‰©ä½™ä½™é¢ä¸ºï¼š{self.__balance}")
        else:
            self.__balance -= self.__drinks[name]
            self.__stock[name] -= 1
            print(f"è´­ä¹°æˆåŠŸï¼Œå‰©ä½™ä½™é¢ï¼š{self.__balance}")

    def add_drink(self, name, price, quantity):
        if name in self.__drinks:
            self.__stock[name] += quantity
            print(f"å·²è¡¥è´§{name},åº“å­˜å¢åŠ {quantity}")
        else:
            self.__drinks[name] = price
            self.__stock[name] = quantity
            print(f"å·²æ·»åŠ æ–°é¥®æ–™ï¼š{name}ï¼Œä»·æ ¼ {price} å…ƒï¼Œåº“å­˜ {quantity} ç“¶")

    def show_balance(self):  # âœ… æ­£ç¡®ç¼©è¿›
        print(f"å½“å‰ä½™é¢ï¼š{self.__balance} å…ƒ")


# ğŸ‘‡ğŸ‘‡ğŸ‘‡ ä»¥ä¸‹æ˜¯æµ‹è¯•ä»£ç  ğŸ‘‡ğŸ‘‡ğŸ‘‡

machine = VendingMachine()  # åˆ›å»ºå”®è´§æœºå¯¹è±¡

machine.show_drinks()  # å±•ç¤ºæ‰€æœ‰é¥®æ–™å’Œåº“å­˜
machine.recharge(10)  # å……å€¼ 10 å…ƒ
machine.show_balance()  # æ˜¾ç¤ºå½“å‰ä½™é¢

machine.buy("å¯ä¹")  # è´­ä¹°å¯ä¹ï¼Œä»·æ ¼ 3 å…ƒ
machine.buy("é›ªç¢§")  # è´­ä¹°é›ªç¢§ï¼Œä»·æ ¼ 4 å…ƒ
machine.buy("æœæ±")  # è´­ä¹°æœæ±ï¼Œä»·æ ¼ 5 å…ƒ
machine.buy("æœæ±")  # ä½™é¢ä¸è¶³æ—¶å°è¯•å†ä¹°æœæ±

machine.show_balance()  # æ˜¾ç¤ºå‰©ä½™ä½™é¢
machine.show_drinks()  # å†æ¬¡å±•ç¤ºé¥®æ–™ï¼Œçœ‹çœ‹åº“å­˜æ˜¯å¦å‡å°‘

machine.add_drink("å¥¶èŒ¶", 6, 4)  # è€æ¿æ·»åŠ æ–°é¥®æ–™â€œå¥¶èŒ¶â€
